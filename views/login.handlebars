{{#section 'index-css'}}  <!--自定义不同段落-->
    <link rel="stylesheet" href="/css/login.css"/>
{{/section}}

<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#signup">注册</a></li>
        <li class="tab"><a href="#login">登录</a></li>
    </ul>

    <div class="tab-content">
        <div id="signup">
            <h1>免费注册</h1>

            <form action="/signup" method="post">

                <div class="field-wrap">
                    <label>
                        用户名<span class="req">*</span>
                    </label>
                    <input type="text" name="account" required autocomplete="off"/>
                </div>

                <div class="field-wrap">
                    <label>
                        密码<span class="req">*</span>
                    </label>
                    <input type="password" name="password" required autocomplete="off"/>
                </div>

                <button type="submit" class="button button-block signup-button"/>开启旅行</button>

            </form>

        </div>

        <div id="login">
            <h1>欢迎回来</h1>

            <form action="/login" method="post">

                <div class="field-wrap">
                    <label>
                         用户名<span class="req">*</span>
                    </label>
                    <input type="text"  name="account" required autocomplete="off"/>
                </div>

                <div class="field-wrap">
                    <label>
                        密码<span class="req">*</span>
                    </label>
                    <input type="password"  name="password" required autocomplete="off"/>
                </div>

                <button type="submit" class="button button-block login-button"/>开启旅行</button>

            </form>

        </div>

    </div>

</div>

{{#section 'index-script'}}
    <script src="/js/jquery.js" charset="utf-8"></script>
    <script src="/js/login.js" charset="utf-8"></script>
{{/section}}