<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="btn btn-default" href="{{page_url prev}}"><i class="fa fa-angle-left"></i></a>
    {{/if}}
    <span class="page-number">{{page}} / {{pages}}</span>
    {{#if next}}
        <a class="btn btn-default" href="{{page_url next}}"><i class="fa fa-angle-right"></i></a>
    {{/if}}
</nav>
