{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<article id="{{id}}" class="{{post_class}} {{#if featured}}featured{{/if}}">
    {{!-- 星标 --}}
    {{#if featured}}
    <div class="featured">
        <i class="fa fa-star"></i>
    </div>
    {{/if}}
    {{!-- 头部 --}}
    <div class="post-head">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class="post-meta">
            <span class="author"><i class="fa fa-user"></i> {{author}}</span> •
            <span class="date"><i class="fa fa-calendar"></i> {{date format="MMMM DD, YYYY"}}</span> •
            <span class="comment-count"><a href="{{url}}#ds-thread">立即评论</a></span>
        </div>
    </div>
    {{!-- 图片 --}}
    {{#if image}}
    <div class="featured-media">
        <a href="{{url}}"><img src="{{image}}" alt="{{{title}}}"></a>
    </div>
    {{/if}}
    {{!-- 内容 --}}
    <div class="post-content">
        {{#if description}}
        <p>{{description}}</p>
        {{else}}
        <p>{{excerpt characters="180"}}…</p>
        {{/if}}
    </div>
    <div class="post-permalink">
        <a href="{{url}}" class="btn btn-default">阅读全文</a>
        <div class="clearfix"></div>
    </div>
    {{!-- 标签和分享 --}}
    <footer class="post-footer clearfix">
        <div class="pull-left tag-list">
            <i class="fa fa-tags"></i>
            {{tags}}
        </div>
        <div class="pull-right share">
            <ul class="share-icons">
                <!-- twitter -->
                <li>
                    <a href="https://twitter.com/share?text=I find a good post, {{title}}&url={{@blog.url}}{{url}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
                </li>
                <!-- facebook -->
                <li>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
                </li>
                <!-- google plus -->
                <li>
                    <a href="https://plus.google.com/share?url={{@blog.url}}{{url}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i></a>
                </li>
                <!-- weibo -->
                <li>
                    <a href="http://service.weibo.com/share/share.php?url={{@blog.url}}{{url}}&title=我看到了一篇不错的文章-《{{title}}》" onclick="window.open(this.href, 'weibo-share', 'width=490,height=530');return false;"><i class="fa fa-weibo"></i></a>
                </li>
                <!-- weixin -->
                <li>
                    <a href="http://share.v.t.qq.com/index.php?c=share&a=index&url={{@blog.url}}{{url}}&title=我看到了一篇不错的文章-《{{title}}》" onclick="window.open(this.href, 'weibo-share', 'width=490,height=530');return false;"><i class="fa fa-tencent-weibo"></i></a>
                </li>
            </ul>
        </div>
    </footer>
</article>

{{/foreach}}

